<%- include('./partials/header') %>
<%- include('./partials/nav') %>
<div class="bg-gray-100 flex items-center justify-center min-h-screen">

    <!-- Container -->
    <div class="max-w-md w-full bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-indigo-600 text-center mb-4">New Password</h2>
        <p class="text-gray-700 text-center mb-6">Enter the New Password to verify your account.</p>

        <!-- OTP Form -->
        <form action="/users/reset-password/<%= id %>" method="POST" class="space-y-4">
            <div>
                <label for="otp" class="block text-gray-700 font-semibold mb-2">PASSWORD:</label>
                <input type="text" id="otp" name="password" required 
                    class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    placeholder="Enter Password">
            </div>
            <button type="submit" 
                class="w-full bg-indigo-600 text-white p-3 rounded-lg hover:bg-indigo-700 transition-colors">
                Reset Password
            </button>
        </form>
    </div>

</div>
<%- include('./partials/footer') %> 